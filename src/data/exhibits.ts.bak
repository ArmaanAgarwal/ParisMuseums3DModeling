export function getExhibitsByZone(zoneId: string): Exhibit[] {
  return EXHIBITS.filter((e) => e.zoneId === zoneId);
}

export function getExhibit(id: string): Exhibit | undefined {
  return EXHIBITS.find((e) => e.id === id);
}

