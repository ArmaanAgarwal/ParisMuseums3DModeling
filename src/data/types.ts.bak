// Core types for the museum data model

export type LevelId = "l1" | "l2" | "l3";

export interface Level {
  id: LevelId;
  title: string;
  themeColor: string;
  summary: string;
  learningGoals: string[];
  levelIntro: string; // Curatorial voice introduction
  keyQuestions: string[]; // 3-6 key questions
  spatialLogic: string; // How zones connect
  signatureExperience: string; // What makes this level special
  accessibilityNotes: string; // Clarity, pacing, interpretation
}

export interface Zone {
  id: string;
  levelId: LevelId;
  title: string;
  summary: string;
  positionOnMap: { x: number; y: number; w: number; h: number };
  zoneIntent: string; // Purpose + what you do here
  whatToNotice: string[]; // Prompts for visitors
}

export interface Exhibit {
  id: string;
  zoneId: string;
  title: string;
  thesis: string;
  wallText: string;
  keyQuestions: string[];
  objectIds: string[];
  whyThisExhibit?: string; // Why this exhibit exists
  whatToNotice?: string[]; // Prompts for visitors
}

export interface MuseumObject {
  id: string;
  slug: string;
  exhibitId: string;
  title: string;
  subtitle: string;
  dateLabel: string;
  yearNumber?: number;
  tags: string[];
  media: {
    imagePath?: string;
    thumbnailPath?: string;
    imageAlt?: string;
    imageCredit?: string;
    imageLicense?: string;
  };
  description: string;
  provenance: string;
  materials: string;
  dimensions: string;
  significance: string;
  whatToNotice: string[];
  relatedObjectIds: string[];
  howItChangedPerformance: string;
  // Museum-specific context
  whyItBelongs?: string;
  whyItMatters?: string;
}

export interface DidacticPanel {
  id: string;
  placement: "tour" | "exhibit" | "object";
  placementId?: string; // tour section id, exhibit id, or object id
  title: string;
  body: string;
  tone: "intro" | "analysis" | "label";
  callouts?: string[];
}

export interface TourChapter {
  id: string;
  title: string;
  anchor: string;
  summary: string;
}

