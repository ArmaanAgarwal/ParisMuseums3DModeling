"use client";

import { useState } from "react";
import Image from "next/image";
import { motion, AnimatePresence } from "framer-motion";

interface ObjectImageProps {
  src?: string;
  alt: string;
  title: string;
  dateLabel?: string;
  credit?: string;
  license?: string;
  className?: string;
  aspectRatio?: "video" | "square" | "portrait";
  priority?: boolean;
}

export function ObjectImage({
  src,
  alt,
  title,
  dateLabel,
  credit,
  license,
  className = "",
  aspectRatio = "video",
  priority = false,
}: ObjectImageProps) {
  const [imageError, setImageError] = useState(false);
  const [showCredit, setShowCredit] = useState(false);

  // Generate placeholder path from slug or title
  const getPlaceholderPath = () => {
    // Try to extract slug from src path if available
    if (src) {
      const match = src.match(/\/([^/]+)\.(jpg|jpeg|png|gif|webp)$/i);
      if (match) {
        return `/objects/placeholders/${match[1]}.svg`;
      }
    }
    // Fallback to title-based slug
    return `/objects/placeholders/${title.toLowerCase().replace(/[^a-z0-9]+/g, "-")}.svg`;
  };

  const placeholderPath = getPlaceholderPath();

  // Determine which image to use
  const imageSrc = imageError || !src ? placeholderPath : src;

  // Aspect ratio classes
  const aspectClasses = {
    video: "aspect-video",
    square: "aspect-square",
    portrait: "aspect-[3/4]",
  };

  return (
    <div className={`relative overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-white/10 via-white/5 to-white/0 ${aspectClasses[aspectRatio]} ${className}`}>
      <AnimatePresence mode="wait">
        {imageError || !src ? (
          <motion.div
            key="placeholder"
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="absolute inset-0 flex items-center justify-center"
          >
            <div className="text-center p-8">
              <div className="mb-4 text-6xl opacity-30">ðŸ“·</div>
              <div className="mb-2 text-sm font-medium text-white/70">{title}</div>
              {dateLabel && (
                <div className="mb-4 text-xs text-white/50">{dateLabel}</div>
              )}
              <div className="text-xs text-white/40">Digital surrogate</div>
            </div>
          </motion.div>
        ) : (
          <Image
            key="image"
            src={imageSrc}
            alt={alt}
            fill
            className="object-cover"
            priority={priority}
            onError={() => setImageError(true)}
          />
        )}
      </AnimatePresence>

      {/* Credit toggle */}
      {(credit || license) && (
        <div className="absolute bottom-2 right-2">
          <button
            onClick={() => setShowCredit(!showCredit)}
            className="rounded-lg border border-white/20 bg-black/50 px-2 py-1 text-xs text-white/70 hover:bg-black/70 transition"
          >
            {showCredit ? "Hide" : "Credit"}
          </button>
        </div>
      )}

      {/* Credit panel */}
      <AnimatePresence>
        {showCredit && (credit || license) && (
          <motion.div
            initial={{ opacity: 0, y: 10 }}
            animate={{ opacity: 1, y: 0 }}
            exit={{ opacity: 0, y: 10 }}
            className="absolute bottom-12 right-2 max-w-xs rounded-lg border border-white/20 bg-black/90 p-3 text-xs text-white/80 backdrop-blur-sm"
          >
            {credit && <div className="mb-2">Credit: {credit}</div>}
            {license && <div className="text-white/60">License: {license}</div>}
          </motion.div>
        )}
      </AnimatePresence>

      {/* Subtle pattern overlay */}
      <div className="absolute inset-0 opacity-5 pointer-events-none">
        <div
          className="h-full w-full"
          style={{
            backgroundImage: `repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255,255,255,0.1) 10px, rgba(255,255,255,0.1) 20px)`,
          }}
        />
      </div>
    </div>
  );
}

